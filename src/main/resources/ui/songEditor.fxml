<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.scottmo.app.controllers.SongEditorController">
    <ScrollPane VBox.vgrow="ALWAYS">
        <VBox>
            <TabPane fx:id="titleLyricsTabs" prefHeight="390.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" />
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" />
                    <ColumnConstraints hgrow="ALWAYS" />
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <Label text="Copyright" GridPane.rowIndex="1" />
                <TextField GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                <TextArea GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />
                <Label text="Comments" GridPane.rowIndex="3" />
                <Label layoutX="10.0" layoutY="85.0" text="Publisher" GridPane.rowIndex="2" />
                <TextField layoutX="460.0" layoutY="77.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />
                <Label text="Verse Order">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="verseOrderInput" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />
                <ComboBox fx:id="verseOrderPicker" prefWidth="100.0" GridPane.columnIndex="2" />
            </GridPane>
        </VBox>
    </ScrollPane>
    <HBox alignment="TOP_RIGHT">
        <Button mnemonicParsing="false" onAction="#onCancel" prefWidth="100.0" text="Cancel">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </HBox.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#onSave" prefWidth="100.0" text="Save">
            <styleClass>
                <String fx:value="button" />
                <String fx:value="accent" />
            </styleClass>
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
